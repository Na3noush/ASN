        <activity
            android:name=".ui.activites.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activites.MainActivity"
            android:exported="false" />
